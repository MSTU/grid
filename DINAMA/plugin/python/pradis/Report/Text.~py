# Объект Текст

class Text (ReportObject): # (multi.ModelLC):

	def __init__ (self, nl, pl, desc=misc.default):

		
		self.description = pl[0]  # описание текста (заголовок)
		self.text  = pl[1]		# текст

		
		
		self.parameters  = pl[2] # здесь и дополнительные параметры текста  - надо определится с ними.
								 # например, размер и т.п.

	
		if desc != misc.default:
			self.name = desc
		else:
			self.name = ""


		
		
					
				